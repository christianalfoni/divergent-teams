{
  "firestore": {
    "rules": "firestore.rules"
  },
  "functions": [
    {
      "source": "packages/functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "pnpm --filter @divergent-teams/shared run build",
        "node packages/functions/prepare-workspace.js",
        "pnpm --filter @divergent-teams/functions run build"
      ],
      "postdeploy": [
        "node packages/functions/cleanup-workspace.js"
      ]
    }
  ]
}
